<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="max-w-md w-full space-y-8">
    <!-- Header -->
    <div class="text-center">
      <i class="fas fa-wallet text-6xl text-indigo-600 mb-4"></i>
      <h2 class="text-3xl font-extrabold text-gray-900">
        Welcome to Dynamic Wallet
      </h2>
      <p class="mt-2 text-sm text-gray-600">
        Secure custodial wallet management on Ethereum
      </p>
    </div>

    <!-- Features -->
    <div class="space-y-4">
      <div class="bg-white rounded-lg shadow-md p-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">What you get:</h3>
        
        <div class="space-y-3">
          <div class="flex items-center">
            <i class="fas fa-check-circle text-green-500 mr-3"></i>
            <span class="text-gray-700">Instant wallet creation upon signup</span>
          </div>
          
          <div class="flex items-center">
            <i class="fas fa-shield-alt text-blue-500 mr-3"></i>
            <span class="text-gray-700">Secure key management</span>
          </div>
          
          <div class="flex items-center">
            <i class="fas fa-coins text-yellow-500 mr-3"></i>
            <span class="text-gray-700">View balance & transaction history</span>
          </div>
          
          <div class="flex items-center">
            <i class="fas fa-paper-plane text-purple-500 mr-3"></i>
            <span class="text-gray-700">Send transactions on Sepolia testnet</span>
          </div>
          
          <div class="flex items-center">
            <i class="fas fa-signature text-red-500 mr-3"></i>
            <span class="text-gray-700">Sign messages cryptographically</span>
          </div>
        </div>
      </div>

      <!-- Auth Buttons -->
      <div class="space-y-3">
        <%= form_with url: "/auth/auth0", method: :post, local: true, class: "w-full" do |form| %>
          <%= form.submit "Sign In", class: "group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors cursor-pointer" %>
        <% end %>
        
        <%= form_with url: "/auth/auth0", method: :post, local: true, class: "w-full" do |form| %>
          <%= form.hidden_field :screen_hint, value: "signup" %>
          <%= form.submit "Create Account", class: "group relative w-full flex justify-center py-3 px-4 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors cursor-pointer" %>
        <% end %>
      </div>

      <!-- Info -->
      <div class="text-center">
        <p class="text-xs text-gray-500">
          ðŸ”’ Powered by Auth0 â€¢ ðŸ§ª Uses Ethereum Sepolia testnet for safe testing
        </p>
      </div>
    </div>
  </div>
</div> 