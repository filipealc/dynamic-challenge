<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
  <!-- Send Transaction -->
  <div class="bg-gray-50 p-4 rounded-lg">
    <h3 class="font-semibold text-gray-900 mb-3">
      <i class="fas fa-paper-plane mr-2 text-blue-500"></i>
      Send Transaction
    </h3>
    <form id="send-form-<%= wallet.id %>" onsubmit="sendTransaction(event, <%= wallet.id %>)">
      <div class="space-y-3">
        <input type="text" id="to-address-<%= wallet.id %>" placeholder="Recipient Address (0x...)" 
               class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm disabled:bg-gray-100 disabled:text-gray-500 disabled:cursor-not-allowed" required>
        <input type="number" id="amount-<%= wallet.id %>" placeholder="Amount (ETH)" step="0.000001" min="0" 
               class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm disabled:bg-gray-100 disabled:text-gray-500 disabled:cursor-not-allowed" required>
        <button type="submit" class="w-full bg-blue-500 hover:bg-blue-600 disabled:bg-blue-300 disabled:cursor-not-allowed text-white py-2 rounded-md text-sm transition-colors duration-200">
          Send ETH
        </button>
      </div>
    </form>
  </div>

  <!-- Sign Message -->
  <div class="bg-gray-50 p-4 rounded-lg">
    <h3 class="font-semibold text-gray-900 mb-3">
      <i class="fas fa-signature mr-2 text-purple-500"></i>
      Sign Message
    </h3>
    <form id="sign-form-<%= wallet.id %>" onsubmit="signMessage(event, <%= wallet.id %>)">
      <div class="space-y-3">
        <textarea id="message-<%= wallet.id %>" placeholder="Enter message to sign..." rows="3" 
                  class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm disabled:bg-gray-100 disabled:text-gray-500 disabled:cursor-not-allowed" required></textarea>
        <button type="submit" class="w-full bg-purple-500 hover:bg-purple-600 disabled:bg-purple-300 disabled:cursor-not-allowed text-white py-2 rounded-md text-sm transition-colors duration-200">
          Sign Message
        </button>
      </div>
    </form>
  </div>

  <!-- Get Testnet ETH -->
  <div class="bg-gray-50 p-4 rounded-lg">
    <h3 class="font-semibold text-gray-900 mb-3">
      <i class="fas fa-faucet mr-2 text-green-500"></i>
      Get Test ETH
    </h3>
    <p class="text-gray-600 text-sm mb-3">Need test ETH? Use a Sepolia faucet:</p>
    <a href="https://cloud.google.com/application/web3/faucet/ethereum/sepolia" target="_blank" class="w-full bg-green-500 hover:bg-green-600 text-white py-2 rounded-md text-sm block text-center">
      Open Faucet
    </a>
  </div>
</div> 