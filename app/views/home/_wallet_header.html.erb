<div class="flex items-center justify-between mb-6">
  <div class="flex items-center">
    <i class="fas fa-wallet text-3xl text-indigo-600 mr-4"></i>
    <div>
      <h2 class="text-xl font-semibold text-gray-900"><%= wallet.name %></h2>
      <div class="flex items-center">
        <p class="text-gray-600 font-mono text-sm break-all mr-2"><%= wallet.address %></p>
        <button onclick="copyToClipboard('<%= wallet.address %>')" class="text-gray-400 hover:text-indigo-600 transition-colors" title="Copy address to clipboard">
          <i class="fas fa-copy text-sm"></i>
        </button>
      </div>
    </div>
  </div>
  
  <div class="text-right">
    <div class="text-2xl font-bold text-gray-900" id="balance-<%= wallet.id %>">
      Loading...
    </div>
    <p class="text-gray-500 text-sm">ETH Balance</p>
    <button onclick="refreshBalance(<%= wallet.id %>)" class="text-indigo-600 hover:text-indigo-800 text-sm">
      <i class="fas fa-refresh mr-1"></i> Refresh
    </button>
  </div>
</div> 