<div class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900">Wallet Dashboard</h1>
        <p class="text-gray-600">Manage your Ethereum wallet on Sepolia testnet</p>
      </div>
      <div class="flex items-center space-x-4">
        <button onclick="showAddWalletModal()" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
          <i class="fas fa-plus mr-2"></i>
          Add New Wallet
        </button>
      </div>
    </div>
  </div>

  <!-- Wallet Content -->
  <% if @wallets.any? %>
    <% @wallets.oldest.each_with_index do |wallet, index| %>
      <%= render 'home/wallet_card', wallet: wallet, is_first: index == 0 %>
    <% end %>
  <% else %>
    <%= render 'home/no_wallet_state' %>
  <% end %>
</div>

<!-- Modals -->
<%= render 'home/result_modal' %>
<%= render 'home/add_wallet_modal' %> 
<%= render 'home/dashboard_scripts' %> 